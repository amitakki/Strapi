      "type": "json",
      "default": [],
      "description": "Array: [{step: 1, description: '...', formula: '...'}]"
    },
    "visualAid": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "description": "Optional diagram explaining the solution"
    }
  }
}